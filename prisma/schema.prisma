generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tournament {
  id           Int                @id @default(autoincrement())
  image        String
  name         String
  dateStart    String
  dateEnd      String?
  place        String
  participants UserOnTournament[]
}

model UserOnTournament {
  id           Int         @id @default(autoincrement())
  Tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  tournamentId Int?
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  hashPassword String
}
